{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
	<div class="sample-content">
		<div class="g-grid width75 aligncenter">
			<div class="g-block">
				<div class="g-content">
					{% if particle.image %}<img src="{{ url(particle.image) }}" class="logo-large" alt="{{ particle.headline|e }}" />{% endif %}
					{% if particle.headline %}<h2>{{ particle.headline|raw }}</h2>{% endif %}									
				<hr>
				{% if particle.description %}<p class="sample-description">{{ particle.description|raw }}</p>{% endif %}	
				</div>
			</div>
		</div>
		<div class="g-grid">
			{% for sample in particle.samples %}
				<div {% if sample.id %}id="{{ sample.id|e }}"{% endif %}
					 class="g-block {{ sample.class }} {{ sample.variations }}">
					<div class="g-content">
						<i class="{{ sample.icon }} sample-icons"></i>
						<h4>{{ sample.title|raw }}</h4>
						{% if sample.subtitle %}<p>{{ sample.subtitle|raw }}</p>{% endif %}
						{% if sample.description %}<p>{{ sample.description|raw }}</p>{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
		{% if particle.linktext %}<p><a href="{{ particle.link|e }}" class="button">{{ particle.linktext|e }}</a></p>{% endif %}
	</div>
{% endblock %}